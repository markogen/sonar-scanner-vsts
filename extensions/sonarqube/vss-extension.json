{
  "manifestVersion": 1,
  "id": "mg-sonarqube",
  "name": "MG-SonarQube",
  "version": "4.9.0",
  "branding": {
    "color": "rgb(67, 157, 210)",
    "theme": "dark"
  },
  "publisher": "markogen",
  "homepage": "https://www.sonarqube.org/",
  "targets": [
    {
      "id": "Microsoft.VisualStudio.Services.Cloud"
    },
    {
      "id": "Microsoft.TeamFoundation.Server",
      "version": "[15.2,)"
    }
  ],
  "description":
    "Detect bugs, vulnerabilities and code smells across project branches and pull requests.",
  "public": true,
  "categories": ["Azure Pipelines"],
  "icons": {
    "default": "extension-icon.png"
  },
  "tags": ["build", "ci", "continuous integration", "code quality", "code analysis", "SAST", "security"],
  "content": {
    "details": {
      "path": "overview.md"
    },
    "license": {
      "path": "license-terms.md"
    }
  },
  "links": {
    "home": {
      "uri": "https://github.com/markogen/sonar-scanner-vsts"
    },
    "getstarted": {
      "uri": "http://redirect.sonarsource.com/doc/install-configure-scanner-tfs-ts.html"
    }
  },
  "CustomerQnASupport": {
    "enableqna": "true",
    "url": "https://community.sonarsource.com/"
  },
  "repository": {
    "type": "git",
    "uri": "https://github.com/markogen/sonar-scanner-vsts"
  },
  "files": [
    {
      "path": "tasks"
    },
    {
      "path": "img",
      "addressable": true
    },
    {
      "path": "icons",
      "addressable": true
    }
  ],
  "scopes": ["vso.build", "vso.code", "vso.test"],
  "contributions": [
    {
      "id": "75433071-8c77-4432-af66-601fc377ac86",
      "type": "ms.vss-distributed-task.task",
      "targets": ["ms.vss-distributed-task.tasks"],
      "properties": {
        "name": "tasks/prepare"
      }
    },
    {
      "id": "96844cf3-42d4-420f-b7e4-e884edfe3ef5",
      "type": "ms.vss-distributed-task.task",
      "targets": ["ms.vss-distributed-task.tasks"],
      "properties": {
        "name": "tasks/analyze"
      }
    },
    {
      "id": "9914c376-55d3-4bef-a74f-b1c5134617fd",
      "type": "ms.vss-distributed-task.task",
      "targets": ["ms.vss-distributed-task.tasks"],
      "properties": {
        "name": "tasks/publish"
      }
    },
    {
      "id": "67ae00d7-e53a-4ea8-9e2c-4d78371db452",
      "description": "Service Endpoint type for SonarQube Connections",
      "type": "ms.vss-endpoint.service-endpoint-type",
      "targets": ["ms.vss-endpoint.endpoint-types"],
      "properties": {
        "name": "mg-sonarqube",
        "displayName": "MG-SonarQube",
        "icon": "icons/SonarQube_endpoint.png",
        "url": {
          "displayName": "Server Url",
          "helpText": "Url for the SonarQube Server to connect to."
        },
        "authenticationSchemes": [
          {
            "type": "ms.vss-endpoint.endpoint-auth-scheme-basic",
            "inputDescriptors": [
              {
                "id": "username",
                "name": "Token",
                "description":
                  "Authentication Token generated through SonarQube (go to My Account > Security > Generate Tokens)",
                "inputMode": "passwordbox",
                "isConfidential": true,
                "validation": {
                  "isRequired": true,
                  "dataType": "string"
                }
              },
              {
                "id": "password",
                "name": "Password",
                "description": "Password",
                "inputMode": "passwordbox",
                "isConfidential": true,
                "validation": {
                  "isRequired": false,
                  "dataType": "string"
                },
                "values": {
                  "inputId": "passwordInput",
                  "defaultValue": "",
                  "isDisabled": true
                }
              }
            ]
          }
        ],
        "helpMarkDown": ""
      }
    }
  ]
}
